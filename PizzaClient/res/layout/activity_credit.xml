<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pt.Credit" >

    <EditText
        android:id="@+id/Cardname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Name on card"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/CardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Cardname"
        android:layout_alignRight="@+id/Cardname"
        android:layout_below="@+id/Cardname"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="text|textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/expDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CardNumber"
        android:layout_alignRight="@+id/CardNumber"
        android:layout_below="@+id/CardNumber"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Expiration date"
        android:inputType="text|textPersonName" />

    <EditText
        android:id="@+id/securityCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expDate"
        android:layout_alignRight="@+id/expDate"
        android:layout_below="@+id/expDate"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Security Code (on the back)"
        android:inputType="text|textPersonName" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/creditErr"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="28dp"
        android:gravity="center_vertical"
        android:onClick="sendMessage"
        android:text="Save &amp; Review Order" />

    <TextView
        android:id="@+id/creditErr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login"
        android:layout_alignLeft="@+id/securityCode"
        android:layout_marginBottom="16dp"
        android:gravity="top|left"
        android:text="ERROR With a bunch of stuff"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#F00" />

</RelativeLayout>
